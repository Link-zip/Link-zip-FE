<!-- res/drawable/cardview_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Border Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- 테두리 색상 및 두께 -->
            <corners android:radius="44dp" /> <!-- 모서리 반경 -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/dark_gray" /> <!-- 배경색 -->
            <corners android:radius="44dp" /> <!-- 모서리 반경 -->
        </shape>
    </item>

</layer-list>
