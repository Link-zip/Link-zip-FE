<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/abled_color"
            app:cardCornerRadius="44dp"
            android:layout_marginStart="-1dp"
            android:layout_marginEnd="-1dp"
            android:layout_marginTop="-1dp"
            android:layout_marginBottom="-1dp"
            app:layout_constraintStart_toStartOf="@id/cv_custom_toast"
            app:layout_constraintEnd_toEndOf="@id/cv_custom_toast"
            app:layout_constraintTop_toTopOf="@id/cv_custom_toast"
            app:layout_constraintBottom_toBottomOf="@id/cv_custom_toast"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_custom_toast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/dark_gray"
            app:cardCornerRadius="44dp"
            app:cardElevation="3dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="1dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingStart="12dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/iv_custom_toast_icon_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape_oval_1191ad_fill"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_custom_toast_icon"
                    android:layout_width="12dp"
                    android:layout_height="9dp"
                    android:src="@drawable/ic_snackbar_check"
                    app:layout_constraintBottom_toBottomOf="@id/iv_custom_toast_icon_back"
                    app:layout_constraintEnd_toEndOf="@id/iv_custom_toast_icon_back"
                    app:layout_constraintStart_toStartOf="@id/iv_custom_toast_icon_back"
                    app:layout_constraintTop_toTopOf="@id/iv_custom_toast_icon_back" />

                <TextView
                    android:id="@+id/tvSample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/pretendard_medium"
                    android:text="링크 저장 완료"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:letterSpacing="-0.03"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_custom_toast_icon_back"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>