<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/iv_itemAlarm_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_alarm_notmissnotcheck"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_itemAlarm_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리마인드 알림"
            android:textSize="14sp"
            android:textColor="@color/nav_selected"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:paddingStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_itemAlarm_icon"
            app:layout_constraintTop_toTopOf="@id/iv_itemAlarm_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_itemAlarm_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20분 전"
            android:textSize="14sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_itemAlarm_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_itemAlarm_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“(링크 제목)” 리마인드 알림이 도착했어요!  ## 제목은 최대 2줄"
            android:textSize="18.5sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:maxLines="2"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_itemAlarm_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="해당 링크에 커스터마이징된 ‘메모’를 삽입. 메모가 없다면 “ Link.zip에서 리마인드 알림을 보내드려요! 지금 바로 링크의 내용을 확인해보세요.”를 표시   ## 내용은 최대 3줄"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="3sp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_itemAlarm_title"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>