<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_saveLink_topImg"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/img_savelink_topimg"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:src="@drawable/shape_rect_gradiant"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:alpha="0.3"/>

            <TextView
                android:id="@+id/tv_saveLink_textCustom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="링크 커스터마이징"
                android:textSize="23sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:letterSpacing="0"
                android:layout_marginTop="40dp"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toBottomOf="@id/iv_saveLink_topImg"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tv_saveLink_linkTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="링크 제목"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="0"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                app:layout_constraintTop_toBottomOf="@id/tv_saveLink_textCustom"
                app:layout_constraintStart_toStartOf="parent"/>

            <EditText
                android:id="@+id/et_saveLink_linkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Instagram의 제로베이스님 : “여름방학 알 ..."
                android:textSize="18sp"
                android:textColor="@color/nav_selected"
                android:fontFamily="@font/pretendard_regular"
                android:letterSpacing="0"
                android:drawableEnd="@drawable/drawerbtn_delete"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="20dp"
                android:imeOptions="actionDone"
                android:layout_marginTop="10dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_saveLink_linkTitle"/>

            <android.widget.Button
                android:id="@+id/btn_saveLink_setMemo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="메모 설정하기"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="0"
                android:backgroundTint="@null"
                android:background="@drawable/shape_rect_10_whitef9_fill_grayd9_line"
                android:padding="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_saveLink_linkTitle"/>


            <android.widget.Button
                android:id="@+id/btn_saveLink_setAlarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="알림 설정하기"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="0"
                android:backgroundTint="@null"
                android:background="@drawable/shape_rect_10_whitef9_fill_grayd9_line"
                android:padding="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_saveLink_setMemo"/>


            <android.widget.Button
                android:id="@+id/btn_saveLink_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장하기"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="0"
                android:backgroundTint="@null"
                android:background="@drawable/shape_rect_10_abled_fill"
                android:padding="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_saveLink_setAlarm"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>
