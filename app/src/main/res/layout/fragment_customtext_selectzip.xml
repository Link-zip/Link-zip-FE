<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">
        <TextView
            android:id="@+id/tv_savetext_select_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장할 Zip 선택하기"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/btn_savetext_early_unselected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawerbtn_lineup_early_unselected"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_savetext_select_zip"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/tv_savetext_new_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zip 추가하기"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:letterSpacing="0"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="@id/btn_savetext_early_unselected"
            app:layout_constraintBottom_toBottomOf="@id/btn_savetext_early_unselected"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_customText_zip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:layout_marginTop="12dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/btn_savetext_early_unselected"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_create_linksave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="링크 저장하기"
            android:textSize="19sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_gray_fill"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
