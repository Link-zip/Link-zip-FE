<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 데이터 바인딩을 사용할 경우 여기에 변수를 선언 -->
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.MainActivity"
        android:background="@color/white">

        <!-- 상단 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/white"
            app:title="전체 Zip"
            app:titleTextColor="@color/black" />

        <!-- 상단 우측 아이콘들 -->
        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_alarm_nothing"
            app:layout_constraintTop_toTopOf="@id/toolbar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingEnd="16dp" />

        <!-- 정렬 및 편집 버튼을 포함하는 CardView -->
        <androidx.cardview.widget.CardView
            android:id="@+id/button_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <!-- 최신순 버튼 -->
                <ImageButton
                    android:id="@+id/sort_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="최신순"
                    android:padding="8dp"
                    android:src="@drawable/drawerbtn_lineup_early_unselected" />

                <!-- Spacer -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 편집 버튼 -->
                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="편집"
                    android:padding="8dp"
                    android:text="편집"
                    android:textColor="@color/black" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 메인 콘텐츠 영역 -->

        <!-- Zip 만들기 버튼 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/zip_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/button_card_view"
            app:layout_constraintVertical_bias="0.0"
            tools:listitem="@layout/item_zip" />

        <ImageButton
            android:id="@+id/create_zip_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_zip_makezip"
            android:contentDescription="Zip 만들기"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toTopOf="@id/bottom_nav_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 하단 내비게이션 바 -->
        <FrameLayout
            android:id="@+id/bottom_nav_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/main_bnv"
                style="Widget.MaterialComponents.BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                app:itemActiveIndicatorStyle="@android:color/transparent"
                app:itemIconSize="24dp"
                android:elevation="4dp"
                app:itemRippleColor="@android:color/transparent"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/bottom_nav_menu" />

            <ImageButton
                android:id="@+id/fab_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_navigation_create"
                android:layout_gravity="center"
                android:elevation="6dp"
                android:contentDescription="+" />
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
