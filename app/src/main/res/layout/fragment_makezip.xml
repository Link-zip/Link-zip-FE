<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        tools:context=".presentation.MainActivity">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toTopOf="@id/fragment_makezip_exzip_ic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:src="@drawable/ic_gnb_back" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/pretendard_semibold"
                android:letterSpacing="-0.03"
                android:text="Zip 만들기"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="20dp"
                tools:layout_editor_absoluteX="137dp"
                tools:layout_editor_absoluteY="13dp" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/makezip_msg10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/fragment_makezip_exzip_ic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar" />

        <ImageView
            android:id="@+id/fragment_makezip_exzip_ic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="90:93"
            app:layout_constraintWidth_percent="0.25"
            android:src="@drawable/ic_zip_sky_shadow"
            app:layout_constraintBottom_toTopOf="@id/makezip_option"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/makezip_msg10"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="72dp"
            android:layout_height="24dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="썸네일"
            android:shadowColor="@color/black"
            android:textColor="#FFFFFF"
            android:textFontWeight="600"
            android:textSize="16px"
            android:letterSpacing="-0.03"
            android:layout_alignParentTop="true"
            android:textAppearance="@style/ziptitlethu"
            android:lineSpacingExtra="5sp"
            android:translationY="-2.45sp"
            android:gravity="center_horizontal|top"
            app:layout_constraintBottom_toBottomOf="@id/fragment_makezip_exzip_ic"
            app:layout_constraintEnd_toEndOf="@id/fragment_makezip_exzip_ic"
            app:layout_constraintStart_toStartOf="@id/fragment_makezip_exzip_ic"
            app:layout_constraintTop_toTopOf="@id/fragment_makezip_exzip_ic" />

        <LinearLayout
            android:id="@+id/makezip_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/fragment_makezip_exzip_ic">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/zip_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="33dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/fragment_makezip_exzip_ic">

                <View
                    android:id="@+id/makezip_msg3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.0888"
                    tools:ignore="MissingConstraints" />


                <TextView
                    android:id="@+id/zip_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="Zip 이름"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="16dp"
                    android:letterSpacing="-0.03"
                    app:layout_constraintStart_toEndOf="@id/makezip_msg3"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteY="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_light"
                    android:text="0/30"
                    android:textColor="#666666"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    android:letterSpacing="-0.03"
                    app:layout_constraintEnd_toStartOf="@id/makezip_msg4"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/makezip_msg4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="parent"
                    app:layout_constraintWidth_percent="0.0888"
                    tools:ignore="MissingConstraints" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/zip_name_enter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/zip_name">

                <TextView
                    android:id="@+id/zip_name_enter_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:text="Zip 이름을 입력해주세요."
                    android:paddingLeft="32dp"
                    android:letterSpacing="-0.03"
                    android:textColor="#666666"
                    android:textFontWeight="400"
                    android:textSize="16dp"
                    tools:ignore="MissingConstraints" />

<!--                <View-->
<!--                    android:id="@+id/makezip_msg8"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="0dp"-->
<!--                    android:layout_marginEnd="8dp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintDimensionRatio="5:0"-->
<!--                    app:layout_constraintEnd_toStartOf="@id/colors"-->
<!--                    app:layout_constraintTop_toTopOf="@+id/line"-->
<!--                    app:layout_constraintVertical_bias="0.0"-->
<!--                    app:layout_constraintWidth_percent="0.06" />-->

                <View
                    android:id="@+id/line"
                    android:layout_width="312dp"
                    android:layout_height="2px"
                    android:layout_marginTop="12dp"
                    android:background="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/zip_name_enter_tv" />

<!--                <View-->
<!--                    android:id="@+id/makezip_msg9"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="0dp"-->
<!--                    android:layout_marginStart="28dp"-->
<!--                    app:layout_constraintBottom_toBottomOf="parent"-->
<!--                    app:layout_constraintDimensionRatio="5:0"-->
<!--                    app:layout_constraintStart_toEndOf="@+id/colors"-->
<!--                    app:layout_constraintTop_toTopOf="@id/line"-->
<!--                    app:layout_constraintVertical_bias="0.0"-->
<!--                    app:layout_constraintWidth_percent="0.06" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/colors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@id/line">

                    <View
                        android:id="@+id/rectangle_1"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_1"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="10dp"/>

                    <View
                        android:id="@+id/rectangle_2"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="rectangle_1"
                        android:layout_marginRight="10dp"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_3"
                        />

                    <View
                        android:id="@+id/rectangle_3"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_4"
                        app:layout_constraintHorizontal_bias="0.901"
                        app:layout_constraintStart_toEndOf="rectangle_2"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/rectangle_4"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_4"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_5"
                        app:layout_constraintHorizontal_bias="0.932"
                        app:layout_constraintStart_toEndOf="rectangle_3"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/rectangle_5"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_5"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_6"
                        app:layout_constraintHorizontal_bias="0.946"
                        app:layout_constraintStart_toEndOf="rectangle_4"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/rectangle_6"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_6"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/rectangle_7"
                        app:layout_constraintHorizontal_bias="0.962"
                        app:layout_constraintStart_toEndOf="rectangle_5"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginRight="10dp"
                        app:layout_constraintVertical_bias="0.0" />

                    <View
                        android:id="@+id/rectangle_7"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/rectangle_7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="rectangle_6"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="264dp">

                <View
                    android:id="@+id/makezip_msg5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.0259"
                    tools:ignore="MissingConstraints" />

                <View
                    android:id="@+id/makezip_msg6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toTopOf="@+id/select_pic_finish_IV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.6019"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/select_pic_finish_IV_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/black_btn_shadow"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="fini"
                    app:layout_constraintTop_toBottomOf="@id/makezip_msg6"
                    app:layout_constraintVertical_bias="0.44" />

                <ImageView
                    android:id="@+id/iv_makezip_grayshadow"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/black_btn_shadow"
                    android:layout_marginBottom="-20dp"
                    app:layout_constraintTop_toTopOf="@id/select_pic_finish_IV"
                    app:layout_constraintBottom_toBottomOf="@id/select_pic_finish_IV"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/select_pic_finish_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/drawerbtn_finish"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/makezip_msg6"
                    app:layout_constraintVertical_bias="1.0" />

                <View
                    android:id="@+id/makezip_msg7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/select_pic_finish_IV"
                    app:layout_constraintHeight_percent="0.0389"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
