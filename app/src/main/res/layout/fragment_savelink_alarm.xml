<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--appbar-->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_saveLink_alarm"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:contentInsetStart="0dp"
            android:contentInsetLeft="0dp"
            android:contentInsetEnd="0dp"
            android:contentInsetRight="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view_saveLink_alarm_mg1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.066667" />

                <ImageView
                    android:id="@+id/iv_saveLink_alarm_toolbar_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="뒤로가기"
                    android:src="@drawable/ic_appbar_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_saveLink_alarm_toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="링크 커스터마이징"
                    android:textAppearance="@style/appbar_title"
                    android:textColor="@android:color/black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--view-->
        <ImageView
            android:id="@+id/iv_saveLink_alarm_topImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_link_topimg"
            app:layout_constraintDimensionRatio="360:115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_saveLink_alarm" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:alpha="0.3"
            android:scaleType="fitXY"
            android:src="@drawable/shape_rect_gradiant"
            app:layout_constraintDimensionRatio="360:115"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_saveLink_alarm_topImg" />

        <View
            android:id="@+id/view_saveLink_alarm_mg4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="24:40"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_saveLink_alarm_topImg"
            app:layout_constraintWidth_percent="0.066" />

        <TextView
            android:id="@+id/tv_saveLink_alarm_setAlarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:text="알림 설정하기"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg4"
            app:layout_constraintTop_toBottomOf="@id/view_saveLink_alarm_mg4" />

        <View
            android:id="@+id/view_saveLink_alarm_mg5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_saveLink_alarm_setAlarm"
            app:layout_constraintWidth_percent="0.088" />

        <TextView
            android:id="@+id/tv_saveLink_alarm_it1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:text="날짜 선택"
            android:textColor="@color/nav_selected"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg5"
            app:layout_constraintTop_toBottomOf="@id/view_saveLink_alarm_mg5" />

        <View
            android:id="@+id/view_saveLink_alarm_mg6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="32:17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_saveLink_alarm_it1"
            app:layout_constraintWidth_percent="0.088" />

        <ImageView
            android:id="@+id/iv_saveLink_alarm_date"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_alarm_date"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg6"
            app:layout_constraintTop_toBottomOf="@id/view_saveLink_alarm_mg6" />

        <TextView
            android:id="@+id/tv_saveLink_alarm_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:text="2024.06.21"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_saveLink_alarm_date"
            app:layout_constraintStart_toEndOf="@id/iv_saveLink_alarm_date"
            app:layout_constraintTop_toTopOf="@id/iv_saveLink_alarm_date" />

        <ImageView
            android:id="@+id/iv_saveLink_alarm_it2"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="13dp"
            android:background="@color/black"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg9"
            app:layout_constraintEnd_toStartOf="@id/view_saveLink_alarm_mg10"
            app:layout_constraintTop_toBottomOf="@id/iv_saveLink_alarm_date" />

        <View
            android:id="@+id/view_saveLink_alarm_mg7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="32:24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_saveLink_alarm_it2"
            app:layout_constraintWidth_percent="0.088" />

        <TextView
            android:id="@+id/tv_saveLink_alarm_it3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:text="시간 선택"
            android:textColor="@color/nav_selected"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/view_saveLink_alarm_mg7"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg7" />

        <View
            android:id="@+id/view_saveLink_alarm_mg8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="32:17"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_saveLink_alarm_it3"
            app:layout_constraintWidth_percent="0.088" />

        <ImageView
            android:id="@+id/iv_saveLink_alarm_time"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_alarm_time"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg8"
            app:layout_constraintTop_toBottomOf="@id/view_saveLink_alarm_mg8" />

        <TextView
            android:id="@+id/tv_saveLink_alarm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:text="AM 12:00"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_saveLink_alarm_time"
            app:layout_constraintStart_toEndOf="@id/iv_saveLink_alarm_time"
            app:layout_constraintTop_toTopOf="@id/iv_saveLink_alarm_time" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="13dp"
            android:background="@color/black"
            app:layout_constraintEnd_toStartOf="@id/view_saveLink_alarm_mg10"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg9"
            app:layout_constraintTop_toBottomOf="@id/iv_saveLink_alarm_time" />

        <ImageView
            android:id="@+id/iv_savelink_alarm_blueshadow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-20dp"
            android:src="@drawable/shadow_bluebtn"
            app:layout_constraintBottom_toBottomOf="@id/btn_saveLink_alarm_complete"
            app:layout_constraintTop_toTopOf="@id/btn_saveLink_alarm_complete" />

        <android.widget.Button
            android:id="@+id/btn_saveLink_alarm_complete"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_rect_8_1191ad_fill"
            android:backgroundTint="@null"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:padding="20dp"
            android:text="완료"
            android:textColor="@color/white"
            android:textSize="19sp"
            app:layout_constraintStart_toEndOf="@id/view_saveLink_alarm_mg9"
            app:layout_constraintEnd_toStartOf="@id/view_saveLink_alarm_mg10"
            app:layout_constraintBottom_toTopOf="@id/view_saveLink_alarm_mg9"/>

        <View
            android:id="@+id/view_saveLink_alarm_mg9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintWidth_percent="0.066" />

        <View
            android:id="@+id/view_saveLink_alarm_mg10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.066" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
