<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_search_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="312:48"
        app:layout_constraintWidth_percent="0.858"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="공지사항"
            android:textAppearance="@style/mypage_social"
            app:layout_constraintStart_toStartOf="@id/cl_search_item"
            app:layout_constraintTop_toTopOf="@id/cl_search_item"
            app:layout_constraintBottom_toBottomOf="@id/cl_search_item" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drawerbtn_delete"
            app:layout_constraintEnd_toEndOf="@id/cl_search_item"
            app:layout_constraintTop_toTopOf="@id/cl_search_item"
            app:layout_constraintBottom_toBottomOf="@id/cl_search_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>