<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="38dp"
            android:elevation="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_home_linkzip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link.zip"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:letterSpacing="-0.025"
                android:lineHeight="28dp"
                android:textColor="@color/black"
                android:layout_marginStart="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/iv_home_alarm_nothing"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_main_alarm_nothing"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/iv_home_alarm_exist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_main_alarm_exist"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_main_search"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toTopOf="@id/iv_home_alarm_nothing"
                app:layout_constraintBottom_toBottomOf="@id/iv_home_alarm_nothing"
                app:layout_constraintEnd_toStartOf="@id/iv_home_alarm_nothing"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/sv_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_main_logobg"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tv_home_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textColor="@color/black"
                    android:lineHeight="34dp"
                    android:letterSpacing="-0.025"
                    android:text="가입을 환영해요!\n링크를 저장해 보세요"
                    android:layout_marginTop="106dp"
                    android:layout_marginStart="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/pb_home_graph"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    android:background="@drawable/circular_progress_background"
                    android:progressDrawable="@drawable/circular_progress_foreground"
                    android:indeterminateOnly="false"
                    android:max="100"
                    android:progress="25"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_welcome" />

                <ImageView
                    android:id="@+id/iv_home_graph_center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_oval_white_fill_00efff_line"
                    app:layout_constraintStart_toStartOf="@id/pb_home_graph"
                    app:layout_constraintEnd_toEndOf="@id/pb_home_graph"
                    app:layout_constraintTop_toTopOf="@id/pb_home_graph"
                    app:layout_constraintBottom_toBottomOf="@id/pb_home_graph" />
                
                <ImageView
                    android:id="@+id/iv_home_clip"
                    android:layout_width="75dp"
                    android:layout_height="127dp"
                    android:src="@drawable/img_clip"
                    app:layout_constraintStart_toStartOf="@id/pb_home_graph"
                    app:layout_constraintEnd_toEndOf="@id/pb_home_graph"
                    app:layout_constraintTop_toTopOf="@id/pb_home_graph"
                    app:layout_constraintBottom_toBottomOf="@id/pb_home_graph" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_40_transparent_fill_d9d9d9_line"
                    android:text="미열람 링크"
                    android:fontFamily="@font/pretendard_medium"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lineHeight="24dp"
                    android:letterSpacing="-0.025"
                    android:layout_marginTop="32dp"
                    android:gravity="center"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pb_home_graph" />

                <TextView
                    android:id="@+id/tv_home_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="122dp"
                    android:text="최근 저장한 링크"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="30dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toStartOf="@id/tv_home_welcome"
                    app:layout_constraintTop_toBottomOf="@id/pb_home_graph" />

                <ImageView
                    android:id="@+id/iv_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gnb_details"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintTop_toTopOf="@id/tv_home_recent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_recent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tv_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:textColor="@color/nav_selected"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:lineHeight="16dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintEnd_toStartOf="@id/iv_home_more"
                    app:layout_constraintTop_toTopOf="@id/iv_home_more"
                    app:layout_constraintBottom_toBottomOf="@id/iv_home_more" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_recent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    tools:listitem="@layout/item_home_link"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_recent"/>

                <TextView
                    android:id="@+id/tv_home_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="오늘의 추천 사이트"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="30dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toStartOf="@id/rv_home_recent"
                    app:layout_constraintTop_toBottomOf="@id/rv_home_recent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_recommend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    tools:listitem="@layout/item_home_recommend"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_recommend"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>