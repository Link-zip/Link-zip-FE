<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_home_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="1dp"
            app:layout_constraintHeight_percent="0.0830"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:id="@+id/view_home_toolbar_mg1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintWidth_percent="0.0722" />

            <TextView
                android:id="@+id/tv_home_linkzip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link.zip"
                android:fontFamily="@font/pretendard_bold"
                android:textSize="20sp"
                android:letterSpacing="-0.025"
                android:lineHeight="28dp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@id/view_home_toolbar_mg1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <View
                android:id="@+id/view_home_toolbar_mg2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.0667" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_home_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/view_home_toolbar_mg2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/iv_home_alarm_nothing"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_main_alarm_nothing"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/iv_home_alarm_exist"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_main_alarm_exist"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:visibility="invisible"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/view_home_toolbar_mg3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cl_home_alarm"
                app:layout_constraintWidth_percent="0.0444" />

            <ImageView
                android:id="@+id/iv_home_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_main_search"
                app:layout_constraintTop_toTopOf="@id/cl_home_alarm"
                app:layout_constraintBottom_toBottomOf="@id/cl_home_alarm"
                app:layout_constraintEnd_toStartOf="@id/view_home_toolbar_mg3"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/sv_home"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="0dp"
            android:scrollbars="none"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view_home_bgmg1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.115" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_home_gradient1"
                    app:layout_constraintDimensionRatio="268:418"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_home_bgmg1"
                    app:layout_constraintBottom_toBottomOf="@id/view_home_bgmg2"/>

                <View
                    android:id="@+id/view_home_bgmg2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintWidth_percent="0.114"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sv_home_link" />

                <View
                    android:id="@+id/view_home_bgmg3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.418" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@drawable/bg_home_gradient2"
                    app:layout_constraintDimensionRatio="238:418"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_home_bgmg3"
                    app:layout_constraintBottom_toBottomOf="@id/view_home_bgmg4"/>

                <View
                    android:id="@+id/view_home_bgmg4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rv_home_recent"
                    app:layout_constraintWidth_percent="0.139" />

                <View
                    android:id="@+id/view_home_mg1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="24:68.5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.0667" />

                <HorizontalScrollView
                    android:id="@+id/sv_home_link"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@id/view_home_mg1"
                    app:layout_constraintStart_toEndOf="@id/view_home_mg1"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_home_link"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iv_home_link_bg"
                                android:layout_width="256dp"
                                android:layout_height="358dp"
                                android:src="@drawable/img_home_logo"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_home_link_1month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="최근 한 달 기준"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_medium"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="122dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_home_link_wait"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1개의 링크가\n기다리고 있어요!"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:lineHeight="34dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="4dp"
                                app:layout_constraintStart_toStartOf="@id/tv_home_link_1month"
                                app:layout_constraintTop_toBottomOf="@id/tv_home_link_1month" />

                            <View
                                android:id="@+id/view_home_link_divider"
                                android:layout_width="184dp"
                                android:layout_height="1dp"
                                android:background="@color/nav_unselected"
                                android:layout_marginTop="24dp"
                                app:layout_constraintStart_toStartOf="@id/tv_home_link_wait"
                                app:layout_constraintTop_toBottomOf="@id/tv_home_link_wait" />

                            <TextView
                                android:id="@+id/tv_home_link_alarmlink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="알림 설정한 링크"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_regular"
                                android:lineHeight="20dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="22dp"
                                app:layout_constraintStart_toStartOf="@id/view_home_link_divider"
                                app:layout_constraintTop_toBottomOf="@id/view_home_link_divider" />

                            <TextView
                                android:id="@+id/tv_home_link_alarmcnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4개"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_medium"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toEndOf="@id/tv_home_link_alarmlink"
                                app:layout_constraintTop_toTopOf="@id/tv_home_link_alarmlink"
                                app:layout_constraintBottom_toBottomOf="@id/tv_home_link_alarmlink" />

                            <TextView
                                android:id="@+id/tv_home_link_notreadlink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="읽지 않은 링크"
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_regular"
                                android:lineHeight="20dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="12dp"
                                app:layout_constraintStart_toStartOf="@id/tv_home_link_alarmlink"
                                app:layout_constraintTop_toBottomOf="@id/tv_home_link_alarmlink" />

                            <TextView
                                android:id="@+id/tv_home_link_notreadcnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1개"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_medium"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginStart="16dp"
                                app:layout_constraintStart_toEndOf="@id/tv_home_link_notreadlink"
                                app:layout_constraintTop_toTopOf="@id/tv_home_link_notreadlink"
                                app:layout_constraintBottom_toBottomOf="@id/tv_home_link_notreadlink" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_home_oldlink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/iv_home_oldlink"
                                android:layout_width="218dp"
                                android:layout_height="358dp"
                                android:src="@drawable/img_home_oldlink"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_home_oldlink_wait"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="오래된 링크가\n기다리고 있어요!"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:lineHeight="34dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="150dp"
                                android:layout_marginStart="24dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/view_home_oldlink_divider"
                                android:layout_width="154dp"
                                android:layout_height="1dp"
                                android:background="@color/nav_unselected"
                                android:layout_marginTop="24dp"
                                app:layout_constraintStart_toStartOf="@id/tv_home_oldlink_wait"
                                app:layout_constraintTop_toBottomOf="@id/tv_home_oldlink_wait" />

                            <TextView
                                android:id="@+id/tv_home_oldlink_notreadcnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="알림을 설정한 링크 중 최근\n한 달을 넘게 안 읽은 링크\n5개가 있어요."
                                android:textSize="14sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_regular"
                                android:lineHeight="20dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="20dp"
                                app:layout_constraintStart_toStartOf="@id/view_home_oldlink_divider"
                                app:layout_constraintTop_toBottomOf="@id/view_home_oldlink_divider" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/layout_home_likelink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp">

                            <ImageView
                                android:id="@+id/iv_home_likelink"
                                android:layout_width="218dp"
                                android:layout_height="358dp"
                                android:src="@drawable/img_home_likelink"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_home_likelink_explanation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="좋아요를 누른\n링크로 이동해요"
                                android:textSize="24sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_semibold"
                                android:lineHeight="34dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginTop="182dp"
                                android:layout_marginStart="24dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <View
                                android:id="@+id/view_home_likelink_divider"
                                android:layout_width="154dp"
                                android:layout_height="1dp"
                                android:background="@color/nav_unselected"
                                android:layout_marginTop="24dp"
                                app:layout_constraintStart_toStartOf="@id/tv_home_likelink_explanation"
                                app:layout_constraintTop_toBottomOf="@id/tv_home_likelink_explanation" />

                            <ImageView
                                android:id="@+id/iv_home_likelink_rarrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_home_rarrow"
                                android:layout_marginTop="29dp"
                                android:layout_marginEnd="40dp"
                                app:layout_constraintTop_toBottomOf="@id/view_home_likelink_divider"
                                app:layout_constraintEnd_toEndOf="parent" />

                            <TextView
                                android:id="@+id/tv_home_likelink_move"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="바로가기"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:fontFamily="@font/pretendard_medium"
                                android:lineHeight="24dp"
                                android:letterSpacing="-0.025"
                                android:layout_marginEnd="10dp"
                                app:layout_constraintTop_toTopOf="@id/iv_home_likelink_rarrow"
                                app:layout_constraintBottom_toBottomOf="@id/iv_home_likelink_rarrow"
                                app:layout_constraintEnd_toStartOf="@id/iv_home_likelink_rarrow"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </HorizontalScrollView>

                <View
                    android:id="@+id/view_home_mg2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="24:54"
                    app:layout_constraintTop_toBottomOf="@id/sv_home_link"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintWidth_percent="0.0667" />

                <TextView
                    android:id="@+id/tv_home_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="최근 저장한 링크"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="30dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/view_home_mg2"
                    app:layout_constraintTop_toBottomOf="@id/view_home_mg2" />

                <View
                    android:id="@+id/view_home_mg3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_home_recent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_recent"
                    app:layout_constraintWidth_percent="0.0667" />

                <ImageView
                    android:id="@+id/iv_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_gnb_details"
                    app:layout_constraintTop_toTopOf="@id/tv_home_recent"
                    app:layout_constraintBottom_toBottomOf="@id/tv_home_recent"
                    app:layout_constraintEnd_toStartOf="@id/view_home_mg3"/>

                <TextView
                    android:id="@+id/tv_home_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="더보기"
                    android:textColor="@color/nav_selected"
                    android:textSize="12sp"
                    android:fontFamily="@font/pretendard_medium"
                    android:lineHeight="16dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintEnd_toStartOf="@id/iv_home_more"
                    app:layout_constraintTop_toTopOf="@id/iv_home_more"
                    app:layout_constraintBottom_toBottomOf="@id/iv_home_more" />

                <View
                    android:id="@+id/view_home_mg4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="24:16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_recent"
                    app:layout_constraintWidth_percent="0.0667" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_recent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_home_recent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/view_home_mg4"
                    app:layout_constraintTop_toBottomOf="@id/view_home_mg4"/>

                <View
                    android:id="@+id/view_home_mg5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="24:50"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_home_recent"
                    app:layout_constraintWidth_percent="0.0667" />

                <TextView
                    android:id="@+id/tv_home_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘의 추천 사이트"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:lineHeight="30dp"
                    android:letterSpacing="-0.025"
                    app:layout_constraintStart_toEndOf="@id/view_home_mg5"
                    app:layout_constraintTop_toBottomOf="@id/view_home_mg5" />

                <View
                    android:id="@+id/view_home_mg6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="24:16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_home_recommend"
                    app:layout_constraintWidth_percent="0.0667" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_home_recommend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_home_recommend"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/view_home_mg6"
                    app:layout_constraintTop_toBottomOf="@id/view_home_mg6"/>

                <View
                    android:id="@+id/view_home_mg7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/rv_home_recommend"
                    app:layout_constraintWidth_percent="0.139" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>