<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <TextView
            android:id="@+id/tv_create_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:paddingBottom="10dp"
            android:paddingLeft="12dp"
            app:layout_constraintBottom_toTopOf="@id/et_create_link"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <EditText
            android:id="@+id/et_create_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/pretendard_medium"
            android:hint="링크를 불러와 주세요."
            android:letterSpacing="0"
            android:paddingBottom="20dp"
            android:paddingLeft="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <android.widget.Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_create_textsummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="텍스트 요약하기"
            android:textSize="19sp"
            android:textColor="@color/nav_selected"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_white000_fill_gray999_line"
            android:layout_marginBottom="16dp"
            android:padding="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_create_linksave"/>

        <android.widget.Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_create_linksave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="링크 저장하기"
            android:textSize="19sp"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/white"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_gray_fill"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
