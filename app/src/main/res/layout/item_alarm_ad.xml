<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_itemAlarm_ad_icon"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_alarm_ad"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_itemAlarm_ad_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="광고"
            android:textSize="12sp"
            android:textColor="@color/nav_selected"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:paddingStart="8dp"
            app:layout_constraintStart_toEndOf="@id/iv_itemAlarm_ad_icon"
            app:layout_constraintTop_toTopOf="@id/iv_itemAlarm_ad_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_itemAlarm_ad_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_ad_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20분 전"
            android:textSize="12sp"
            android:textColor="@color/dark_gray"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_itemAlarm_ad_icon"
            app:layout_constraintBottom_toBottomOf="@id/iv_itemAlarm_ad_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(광고 문구)\n## 제목은 최대 2줄"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="5sp"
            android:maxLines="2"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/iv_itemAlarm_ad_icon"/>

        <TextView
            android:id="@+id/tv_itemAlarm_ad_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="(광고 문구)\n## 내용은\n## 최대 3줄"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="3sp"
            android:layout_marginTop="14dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_itemAlarm_ad_title"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/img_alarm_adpic"
            android:scaleType="centerCrop"
            app:layout_constraintDimensionRatio="3.47"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_itemAlarm_ad_memo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>