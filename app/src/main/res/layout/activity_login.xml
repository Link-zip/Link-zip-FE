<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <View
        android:id="@+id/view_login_mg1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.154" />

    <ImageView
        android:id="@+id/iv_login_clip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/img_clip"
        app:layout_constraintDimensionRatio="133:215"
        app:layout_constraintHeight_percent="0.316"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_login_mg1" />

    <View
        android:id="@+id/view_splash_mg2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_login_clip"
        app:layout_constraintHeight_percent="0.0737" />

    <TextView
        android:id="@+id/tv_login_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_semibold"
        android:lineHeight="42dp"
        android:text="처음이신가요?"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:letterSpacing="-0.025"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_splash_mg2" />

    <View
        android:id="@+id/view_splash_mg3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_question"
        app:layout_constraintHeight_percent="0.106" />

    <TextView
        android:id="@+id/tv_login_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/pretendard_regular"
        android:lineHeight="16sp"
        android:letterSpacing="-0.025"
        android:text="소셜로그인"
        android:textSize="12sp"
        android:textColor="@color/nav_selected"
        app:layout_constraintStart_toEndOf="@id/iv_login_social_rectangle1"
        app:layout_constraintEnd_toStartOf="@id/iv_login_social_rectangle2"
        app:layout_constraintTop_toBottomOf="@id/view_splash_mg3" />

    <ImageView
        android:id="@+id/iv_login_social_rectangle1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@drawable/shape_rect_ebebeb_fill"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_login_social"
        app:layout_constraintTop_toTopOf="@id/tv_login_social"
        app:layout_constraintBottom_toBottomOf="@id/tv_login_social"/>

    <ImageView
        android:id="@+id/iv_login_social_rectangle2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@drawable/shape_rect_ebebeb_fill"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_login_social"
        app:layout_constraintTop_toTopOf="@id/tv_login_social"
        app:layout_constraintBottom_toBottomOf="@id/tv_login_social"/>

    <View
        android:id="@+id/view_login_mg4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_login_social"
        app:layout_constraintHeight_percent="0.0235" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img_login_kakaologin"
        app:layout_constraintDimensionRatio="300:45"
        app:layout_constraintHeight_percent="0.0661"
        app:layout_constraintTop_toBottomOf="@id/view_login_mg4"
        app:layout_constraintStart_toStartOf="@id/iv_login_social_rectangle1"
        app:layout_constraintEnd_toEndOf="@id/iv_login_social_rectangle2" />

</androidx.constraintlayout.widget.ConstraintLayout>