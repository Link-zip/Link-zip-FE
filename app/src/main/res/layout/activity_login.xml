<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <ImageView
        android:id="@+id/iv_login_clip"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="142dp"
        android:src="@drawable/img_clip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_login_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/pretendard_semibold"
        android:lineHeight="42dp"
        android:text="처음이신가요?"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:letterSpacing="-0.025"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_login_clip" />

    <ImageView
        android:id="@+id/iv_login_social_rectangle1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@drawable/shape_rect_ebebeb_fill"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_login_social"
        app:layout_constraintTop_toTopOf="@id/tv_login_social"
        app:layout_constraintBottom_toBottomOf="@id/tv_login_social"/>

    <TextView
        android:id="@+id/tv_login_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:fontFamily="@font/pretendard_regular"
        android:lineHeight="16sp"
        android:letterSpacing="-0.025"
        android:text="소셜로그인"
        android:textSize="12sp"
        android:textColor="@color/nav_selected"
        android:layout_marginTop="72dp"
        app:layout_constraintStart_toEndOf="@id/iv_login_social_rectangle1"
        app:layout_constraintEnd_toStartOf="@id/iv_login_social_rectangle2"
        app:layout_constraintTop_toBottomOf="@id/tv_login_question" />

    <ImageView
        android:id="@+id/iv_login_social_rectangle2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:src="@drawable/shape_rect_ebebeb_fill"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_login_social"
        app:layout_constraintTop_toTopOf="@id/tv_login_social"
        app:layout_constraintBottom_toBottomOf="@id/tv_login_social"/>

