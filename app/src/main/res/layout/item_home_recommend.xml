<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_home_recommend_img"
        android:layout_width="140dp"
        android:layout_height="190dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_item_home_recommend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_recommend"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/iv_item_home_recommend_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_home_recommend"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_home_recommend_title"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginHorizontal="8dp"
        android:text="핀터레스트(Pinterest)"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:ellipsize="end"
        android:maxLines="1"
        android:lineHeight="24dp"
        android:letterSpacing="-0.025"
        app:layout_constraintStart_toStartOf="@id/cv_item_home_recommend_img"
        app:layout_constraintTop_toTopOf="@id/cv_item_home_recommend_img" />


</androidx.constraintlayout.widget.ConstraintLayout>