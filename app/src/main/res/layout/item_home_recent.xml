<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item_home_link_img"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:id="@+id/iv_item_home_link_img"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:src="@drawable/img_default_thumbnail"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_item_home_link_title"
        android:layout_width="128dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="펫 프렌들리 마케팅"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_medium"
        android:ellipsize="end"
        android:maxLines="1"
        android:lineHeight="20dp"
        android:letterSpacing="-0.025"
        app:layout_constraintStart_toStartOf="@id/cv_item_home_link_img"
        app:layout_constraintTop_toBottomOf="@id/cv_item_home_link_img" />


</androidx.constraintlayout.widget.ConstraintLayout>