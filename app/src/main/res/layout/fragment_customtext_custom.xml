<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp">

        <EditText
            android:id="@+id/et_customText_summaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이제는 좁고 뾰족한 타겟을 두고 있는 마이크로/나노 인플루언서와의 협업을 통한 마케팅 전략이 대세이다. 상대적으로 저렴한 비용으로 브랜드의 메세지를 전달해 낼 수 있다는 것이 가장 큰 장점이다. 하지만 이들과의 협업 과정에서는 커뮤니케이션이 무엇보다 중요하기 때문에 상세하고 정확한 가이드라인이 가장 중요하다."
            android:textSize="13sp"
            android:textColor="@color/nav_selected"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="0"
            android:lineSpacingExtra="4dp"
            android:layout_marginTop="8dp"
            android:inputType="textMultiLine"
            android:minHeight="100dp"
            android:gravity="top"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_customText_textCustom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="텍스트 커스터마이징"
            android:textSize="23sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_bold"
            android:letterSpacing="0"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/et_customText_summaryText"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tv_customText_linkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="링크 제목"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_customText_textCustom"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_customText_linkTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="실패란 없는 마이크로/나노 인플루언서 필승.."
            android:textSize="18sp"
            android:textColor="@color/nav_selected"
            android:fontFamily="@font/pretendard_regular"
            android:letterSpacing="0"
            android:drawableEnd="@drawable/drawerbtn_delete"
            android:layout_marginTop="10dp"
            android:paddingLeft="8dp"
            android:paddingBottom="20dp"
            android:imeOptions="actionDone"
            app:layout_constraintTop_toBottomOf="@id/tv_customText_linkTitle"/>

        <android.widget.Button
            android:id="@+id/btn_customText_setMemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메모 설정하기"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_whitef9_fill_grayd9_line"
            android:layout_marginTop="32dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/et_customText_linkTitle"/>


        <android.widget.Button
            android:id="@+id/btn_customText_setAlarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알림 설정하기"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_whitef9_fill_grayd9_line"
            android:layout_marginTop="12dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_customText_setMemo"/>


        <android.widget.Button
            android:id="@+id/btn_customText_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장하기"
            android:textSize="19sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="0"
            android:backgroundTint="@null"
            android:background="@drawable/shape_rect_10_abled_fill"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/btn_customText_setAlarm"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
